{% extends "page.twig" %}

{% block pageTitle %}Roles list{% endblock %}

{% block breadcrumbs %}
  <div class="col-lg-10">
    <h2>Roles list</h2>
    <ol class="breadcrumb">
        <li>
            <a href="/{{ backend.code }}/">Dashboard</a>
        </li>        
        <li class="active">
            <strong>All roles</strong>
        </li>
    </ol>
  </div>
{% endblock %}

{% block content %}

  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Roles list</h5>
    </div>

    <div class="ibox-content">

      <div class="buttons-group">
        <a class="btn btn-primary" href="/{{ backend.code }}/roles/new/">New role</a>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Base role</th>
            <th class="text-right">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for role in roles %}
            <tr>
              <td>
                <a href="{{ role.getSingleUrl() }}">
                  {{ role.id }}
                </a>
              </td>
              <td>{{ role.baseRoleId }}</td>
              <td class="action-cell">
                <div class="input-group-btn text-right">
                    <a href="{{ role.getSingleUrl() }}" tabindex="-1" class="btn btn-white" type="button">Edit</a>
                     <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button"><span class="caret"></span></button>
                      <ul class="dropdown-menu pull-right">
                          <li><a href="{{ role.getSingleUrl() }}">Edit</a></li>
                          <li><a href="{{ role.getSingleUrl() }}delete">Delete</a></li>
                      </ul>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

    </div>
  </div>

{% endblock %}