{% extends "page.twig" %}

{% block pageTitle %}Users list{% endblock %}

{% block breadcrumbs %}
  <div class="col-lg-10">
    <h2>Users list</h2>
    <ol class="breadcrumb">
        <li>
            <a href="/{{ backend.code }}/">Dashboard</a>
        </li>        
        <li class="active">
            <strong>All users</strong>
        </li>
    </ol>
  </div>
{% endblock %}

{% block content %}

  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Users list</h5>
    </div>

    <div class="ibox-content">

      <div class="buttons-group">
        <a class="btn btn-primary" href="/{{ backend.code }}/users/new/">New user</a>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Login</th>
            <th>Role</th>
            <th>Language</th>
            <th class="text-right">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for user in users %}
            <tr>
              <td>
                <a href="{{ user.getSingleUrl() }}">
                  {{ user.shortView() }}
                </a>
              </td>
              <td>
                <a href="{{ user.getSingleUrl() }}">
                  {{ user.username }}
                </a>
              </td>
              <td>
                <a href="/{{ backend.code }}/roles/{{ user.roleId }}/">
                  {{ user.roleId }}
                </a>
              </td>
              <td>{{ user.language.long }}</td>
              <td class="action-cell">
                <div class="input-group-btn text-right">
                    <a href="{{ user.getSingleUrl() }}" tabindex="-1" class="btn btn-white" type="button">Edit</a>
                     <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button"><span class="caret"></span></button>
                      <ul class="dropdown-menu pull-right">
                          <li><a href="{{ user.getSingleUrl() }}">Edit</a></li>
                          <li><a href="{{ user.getSingleUrl() }}delete">Delete</a></li>
                      </ul>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
        {{ users.links()|raw }}
    </div>
  </div>

{% endblock %}