{% if field.multiple %}
  {% if 'ref ' in field.type %}                  
    {% include 'fields/multiple/ref' with {'field': field, 'id': id, 'name': name, 'relations': relations, 'value': value, 'count': count} only %}
  {% elseif field.type == "Text" %}
    {% include 'fields/multiple/html' with {'field': field, 'id': id, 'name': name, 'value': value} only %}
  {% elseif field.type == "DateTime" %}
    {% include 'fields/multiple/date' with {'field': field, 'id': id, 'name': name, 'value': value} only %}
  {% elseif field.type == "Json" %}
    {% include 'fields/multiple/text' with {'field': field, 'id': id, 'name': name, 'value': value} only %}
  {% else %}
    {% include 'fields/multiple/string' with {'field': field, 'id': id, 'name': name, 'value': value} only %}
  {% endif %}
{% else %}
  {% if 'ref ' in field.type %}
    {% include 'fields/single/ref' with {'field': field, 'id': id, 'name': name, 'relations': relations, 'value': value, 'count': count} only %}
  {% elseif field.type == "Boolean" %}
    {% include 'fields/single/boolean' with {'field': field, 'id': id, 'name': name, 'value': value} only %} 
  {% elseif field.type == "DateTime" %}
    {% include 'fields/single/date' with {'field': field, 'id': id, 'name': name, 'value': value} only %} 
  {% elseif field.type == "Text" %}
    {% include 'fields/single/html' with {'field': field, 'id': id, 'name': name, 'value': value} only %} 
  {% elseif field.type == "Json" %}
    {% include 'fields/single/text' with {'field': field, 'id': id, 'name': name, 'value': value} only %} 
  {% else %}
    {% include 'fields/single/string' with {'field': field, 'id': id, 'name': name, 'value': value} only %} 
  {% endif %}
{% endif %}