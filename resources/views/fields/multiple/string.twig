{% if value %}
  {% for key, string in value %}
    <input 
      name="{% if name is defined %}{{ name }}{% else %}{{ field.name }}{% endif %}[{{ key }}]"
      id="{% if id is defined %}{{ id }}{% else %}{{ field.name }}{% endif %}"
      type="text" 
      class="form-control form-control-multiple" 
      value="{{ string }}"
    >
  {% endfor %}
{% endif %}
{% for key in value|length .. value|length + 1 %}
  <input 
    name="{% if name is defined %}{{ name }}{% else %}{{ field.name }}{% endif %}[{{ key }}]"
    id="{% if id is defined %}{{ id }}{% else %}{{ field.name }}{% endif %}"
    type="text" 
    class="form-control form-control-multiple" 
    value=""
  >
{% endfor %}