{% extends "page.twig" %}

{% block content %}

  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>Collections list</h5>
    </div>

    <div class="ibox-content">
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th class="text-right">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for schema in schemas %}
            <tr>
              <td>{{ schema.id }}</td>
              <td>{{ schema.title }}</td>
              <td class="action-cell">
                <div class="input-group-btn text-right">
                    <a href="/{{ schema.id }}/" tabindex="-1" class="btn btn-white" type="button">List elements</a>
                     <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button"><span class="caret"></span></button>
                      <ul class="dropdown-menu pull-right">
                          <li><a href="/{{ schema.id }}/">List elements</a></li>
                          <li><a href="/schemas/{{ schema.id }}/edit">Edit schema</a></li>
                          <li><a href="/schemas/{{ schema.id }}/delete">Delete schema</a></li>
                      </ul>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

{% endblock %}