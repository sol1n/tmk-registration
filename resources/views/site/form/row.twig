<tr id="member-{{ member.id }}-edit" class="members-table-row members-table-row-edit js-members-table-row-edit">
    <td colspan="8">
        <div class="form-block">
            <a href="#" class="form-block-close" title="Скрыть форму" data-member-edit="#member-{{ member.id }}-edit">
                <svg width="10px" height="11px" viewBox="0 0 10 11" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <g transform="translate(-616.000000, -949.000000)" fill="#E66F35">
                            <g transform="translate(616.000000, 949.000000)">
                                <rect transform="translate(5.000000, 5.500000) rotate(-315.000000) translate(-5.000000, -5.500000) " x="-1" y="5" width="12" height="1"></rect>
                                <rect transform="translate(5.000000, 5.500000) scale(-1, 1) rotate(-315.000000) translate(-5.000000, -5.500000) " x="-1" y="5" width="12" height="1"></rect>
                            </g>
                        </g>
                    </g>
                </svg>
            </a>

            <div class="form-block-padding">
                <form action="/form/{{ company.id }}/user/{{ member.id }}/" method="POST" enctype="multipart/form-data">
                {{ csrf_field() }}
                    <div class="block-title">
                        Редактирование участника
                    </div>

                    <div class="form-group m-t-lg">
                        <label class="form-label" for="form-edit-1-status">Статус участника</label>
                        <select name="status[]" id="form-edit-1-status" data-placeholder="Выберите статус" multiple class="js-chosen-select js-form-status">
                            {% for status in statuses %}
                                {% if status.id in member.fields.status %}
                                <option selected value="{{ status.id }}">{{ status.fields.Title }}</option>
                                {% else %}
                                <option value="{{ status.id }}">{{ status.fields.Title }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-4">
                            <div class="form-group">
                                <label class="form-label" for="form-edit-1-lastname">Фамилия</label>
                                <input id="form-edit-1-lastname" type="text" name="lastName" class="form-input" value="{{ member.fields.lastName }}">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <div class="form-group">
                                <label class="form-label" for="form-edit-1-name">Имя</label>
                                <input id="form-edit-1-name" type="text" name="firstName" class="form-input" value="{{ member.fields.firstName }}">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <div class="form-group">
                                <label class="form-label" for="form-edit-1-middlename">Отчество</label>
                                <input id="form-edit-1-middlename" type="text" name="middleName" class="form-input" value="{{ member.fields.middleName }}">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-4">
                          <div class="form-group">
                              <label class="form-label" for="form-lastname">
                                Фамилия <span class="c-gray">(англ)</span>
                              </label>
                              <input id="form-lastname" type="text" name="en[lastName]" class="form-input" value="{{ member.languages.en.lastName }}">
                          </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                          <div class="form-group">
                              <label class="form-label" for="form-name">
                                Имя <span class="c-gray">(англ)</span>
                              </label>
                              <input id="form-name" type="text" name="en[firstName]" class="form-input" value="{{ member.languages.en.firstName }}">
                          </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                          <div class="form-group">
                              <label class="form-label" for="form-middlename">
                                Отчество <span class="c-gray">(англ)</span>
                              </label>
                              <input id="form-middlename" type="text" name="en[middleName]" class="form-input" value="{{ member.languages.en.middleName }}">
                          </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-4">
                            <div class="form-group">
                                <label class="form-label" for="form-edit-1-position">Должность</label>
                                <input id="form-edit-1-position" type="text" name="position" class="form-input" value="{{ member.fields.position }}">
                            </div>
                        </div>

