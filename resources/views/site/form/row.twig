                    {% if member.football %}
                    <div class="active member-additional-form js-member-status js-member-status-c40c992e-430d-4545-95b1-d63645f8a6fa">
                    {% else %}
                    <div class="member-additional-form js-member-status js-member-status-c40c992e-430d-4545-95b1-d63645f8a6fa">
                    {% endif %}
                        <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                <div class="form-group">
                                    <label for="form-edit-1-subject" class="form-label">Футбольная команда</label>
                                    <div class="form-select form-select-bold">
                                        <select name="footballTeam">
                                        <option value="">Выберите команду</option>
                                        {% for one in footballTeams %}
                                            {% if one.id == member.fields.footballTeam %}
                                                <option selected value="{{ one.id }}">{{ one.fields.teamName }}</option>
                                            {% else %}
                                                <option value="{{ one.id }}">{{ one.fields.teamName }}</option>
                                            {% endif %}
                                        {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if member.kvn %}
                    <div class="active member-additional-form js-member-status js-member-status-0567ede5-b573-4dda-8866-d988d1456f33">
                    {% else %}
                    <div class="member-additional-form js-member-status js-member-status-0567ede5-b573-4dda-8866-d988d1456f33">
                    {% endif %}
                        <div class="row">
                            <div class="col-xs-12 col-sm-12">
                                <div class="form-group">
                                    <label for="form-edit-1-subject" class="form-label">Команда КВН</label>
                                    <div class="form-select form-select-bold">
                                        <select name="KVNTeam">
                                        <option value="">Выберите команду</option>
                                        {% for one in kvnTeams %}
                                            {% if one.id == member.fields.KVNTeam %}
                                                <option selected value="{{ one.id }}">{{ one.fields.Title }}</option>
                                            {% else %}
                                                <option value="{{ one.id }}">{{ one.fields.Title }}</option>
                                            {% endif %}
                                        {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="form-edit-1-bio">Биография</label>
                        <textarea class="form-textarea" name="biography" id="form-edit-1-bio" cols="30" rows="10" maxlength="3000" data-text-count data-text-count-block="#form-edit-1-bio-counter">{{ member.fields.biography }}</textarea>
                        <div class="form-textarea-counter">
                            Максимальное количество символов: <span id="form-edit-1-bio-counter">3000</span>
                        </div>
                    </div>

                    {% if (member.fields.lectures|length) %}
                        
                        {% for lecture in member.fields.lectures %}

                            <div class="active member-additional-form js-member-status js-member-status-5e5d15db-ad9f-4a7f-9bb3-ea0ae535871a js-member-status-962896cb-10df-464b-8e26-62c79e81f9be">

                                {%
                                    include 'site/form/lecture' 
                                    with {
                                            'sections': sections,
                                            'lecture': lecture
                                    } only
                                %}

                                {% if loop.last %}
                                    <p>
                                      <a class="more-lecture">
                                        Добавить еще один доклад
                                      </a>
                                    </p>
                                {% endif %}

                            </div>
                        {% endfor %}

                    {% else %}

                        {% if member.report %}
                            <div class="active member-additional-form js-member-status js-member-status-5e5d15db-ad9f-4a7f-9bb3-ea0ae535871a js-member-status-962896cb-10df-464b-8e26-62c79e81f9be">
                        {% else %}
                            <div class="member-additional-form js-member-status js-member-status-5e5d15db-ad9f-4a7f-9bb3-ea0ae535871a js-member-status-962896cb-10df-464b-8e26-62c79e81f9be">
                        {% endif %}

                            {%
                                include 'site/form/lecture' 
                                with {
                                        'sections': sections
                                } only
                            %}

                            <p>
                              <a class="more-lecture">
                                Добавить еще один доклад
                              </a>
                            </p>

                        </div>

                    {% endif %}

                    

                    

                    <div class="text-right">
                        <button type="submit" class="button button-orange-hollow">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>
    </td>
</tr>