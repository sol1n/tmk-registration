<tr 
  id="member-{{ member.id }}-edit" 
  class="members-table-row members-table-row-edit js-members-table-row-edit"
>
  <td colspan="8">
    <div class="form-block">
      <a 
        href="#" 
        class="form-block-close" 
        title="Скрыть форму" 
        data-member-edit="#member-{{ member.id }}-edit"
      >
        {{ source('/site/svg/icon-mutiselect-close') }}
      </a>

      <div class="form-block-padding">
        <form 
          action="/form/{{ company.id }}/user/{{ member.id }}/" 
          method="POST" 
          enctype="multipart/form-data"
        >
          {{ csrf_field() }}
          <div class="block-title">
              Редактирование участника
          </div>

          <div class="form-group m-t-lg">
              <label class="form-label" for="form-edit-1-status">Статус участника</label>
              <select name="status[]" id="form-edit-1-status" data-placeholder="Выберите статус" multiple class="js-chosen-select js-form-status">
                {% for status in statuses %}
                  {% if status.id in member.fields.status %}
                    <option selected value="{{ status.id }}">{{ status.fields.Title }}</option>
                  {% else %}
                    <option value="{{ status.id }}">{{ status.fields.Title }}</option>
                  {% endif %}
                {% endfor %}
              </select>
          </div>

          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <div class="form-group">
                <label class="form-label" for="form-edit-1-lastname">Фамилия</label>
                <input id="form-edit-1-lastname" type="text" name="lastName" class="form-input" value="{{ member.fields.lastName }}">
              </div>
            </div>
            <div class="col-xs-12 col-sm-4">
              <div class="form-group">
                <label class="form-label" for="form-edit-1-name">Имя</label>
                <input id="form-edit-1-name" type="text" name="firstName" class="form-input" value="{{ member.fields.firstName }}">
              </div>
            </div>
            <div class="col-xs-12 col-sm-4">
              <div class="form-group">
                <label class="form-label" for="form-edit-1-middlename">Отчество</label>
                <input id="form-edit-1-middlename" type="text" name="middleName" class="form-input" value="{{ member.fields.middleName }}">
              </div>
            </div>
          </div>

          <div class="row">
              <div class="col-xs-12 col-sm-4">
                <div class="form-group">
                  <label class="form-label" for="form-lastname">
                    Фамилия <span class="c-gray">(англ)</span>
                  </label>
                  <input id="form-lastname" type="text" name="en[lastName]" class="form-input" value="{{ member.languages.en.lastName }}">
                </div>
              </div>
              <div class="col-xs-12 col-sm-4">
                <div class="form-group">
                  <label class="form-label" for="form-name">
                    Имя <span class="c-gray">(англ)</span>
                  </label>
                  <input id="form-name" type="text" name="en[firstName]" class="form-input" value="{{ member.languages.en.firstName }}">
                </div>
              </div>
              <div class="col-xs-12 col-sm-4">
                <div class="form-group">
                  <label class="form-label" for="form-middlename">
                    Отчество <span class="c-gray">(англ)</span>
                  </label>
                  <input id="form-middlename" type="text" name="en[middleName]" class="form-input" value="{{ member.languages.en.middleName }}">
                </div>
              </div>
          </div>

          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <div class="form-group">
                <label class="form-label" for="form-edit-1-position">Должность</label>
                <input id="form-edit-1-position" type="text" name="position" class="form-input" value="{{ member.fields.position }}">
              </div>
            </div>

            <div class="col-xs-12 col-sm-4">
              <div class="form-group">
                <label class="form-label" for="form-edit-1-phone">Телефон</label>
                <input id="form-edit-1-phone" type="text" name="phoneNumber" class="form-input" data-masked-input="+7 (000) 000-00-00" data-masked-input-placeholder="+7 (___) ___-__-__" data-masked-input-clearifnotmatch placeholder="+7 (___) ___-__-__"  value="{{ member.fields.phoneNumber }}">
              </div>
            </div>

            <div class="col-xs-12 col-sm-4">
              <div class="form-group">
                <label class="form-label">&nbsp;</label>
                <div class="js-file-input form-file-input">
                  <span class="icon no-td js-file-input-link form-file-input-link">
                    {{ source('/site/svg/icon-photo') }}
                    <span class="dotted">Загрузить фотографию</span>
                  </span>

                  <input type="file" name="photo" class="js-file-input-field form-file-input-field" accept="image/*">

                  <div class="js-file-input-photo form-file-input-photo"></div>
                  <div class="js-file-input-name form-file-input-name"></div>

                  <a href="#" class="js-file-input-del form-file-input-del">
                    {{ source('/site/svg/icon-list-del') }}
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="{% if member.football %}active{% endif %} member-additional-form js-member-status js-member-status-c40c992e-430d-4545-95b1-d63645f8a6fa">
            <div class="row">
              <div class="col-xs-12 col-sm-12">
                <div class="form-group">
                  <label for="form-edit-1-subject" class="form-label">Футбольная команда</label>
                  <div class="form-select form-select-bold">
                    <select name="footballTeam">
                    <option value="">Выберите команду</option>
                    {% for one in footballTeams %}
                      {% if one.id == member.fields.footballTeam %}
                        <option selected value="{{ one.id }}">{{ one.fields.teamName }}</option>
                      {% else %}
                        <option value="{{ one.id }}">{{ one.fields.teamName }}</option>
                      {% endif %}
                    {% endfor %}
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="{% if member.kvn %}active{% endif %} member-additional-form js-member-status js-member-status-0567ede5-b573-4dda-8866-d988d1456f33">
            <div class="row">
              <div class="col-xs-12 col-sm-12">
                <div class="form-group">
                  <label for="form-edit-1-subject" class="form-label">Команда КВН</label>
                  <div class="form-select form-select-bold">
                    <select name="KVNTeam">
                    <option value="">Выберите команду</option>
                    {% for one in kvnTeams %}
                      {% if one.id == member.fields.KVNTeam %}
                        <option selected value="{{ one.id }}">{{ one.fields.Title }}</option>
                      {% else %}
                        <option value="{{ one.id }}">{{ one.fields.Title }}</option>
                      {% endif %}
                    {% endfor %}
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label" for="form-edit-1-bio">Биография</label>
            <textarea class="form-textarea" name="biography" id="form-edit-1-bio" cols="30" rows="10" maxlength="3000" data-text-count data-text-count-block="#form-edit-1-bio-counter">{{ member.fields.biography }}</textarea>
            <div class="form-textarea-counter">
              Максимальное количество символов: <span id="form-edit-1-bio-counter">3000</span>
            </div>
          </div>

          {% if (member.fields.lectures|length) %}
            {% for lecture in member.fields.lectures %}
              <div class="active member-additional-form js-member-status js-member-status-5e5d15db-ad9f-4a7f-9bb3-ea0ae535871a js-member-status-962896cb-10df-464b-8e26-62c79e81f9be">

                {%
                  include 'site/form/lecture' 
                  with {
                    'sections': sections,
                    'lecture': lecture
                  } only
                %}

                {% if loop.last %}
                  <p>
                    <a class="more-lecture">
                      Добавить еще один доклад
                    </a>
                  </p>
                {% endif %}

              </div>
            {% endfor %}
          {% else %}

            <div class="{% if member.report %}active{% endif %} member-additional-form js-member-status js-member-status-5e5d15db-ad9f-4a7f-9bb3-ea0ae535871a js-member-status-962896cb-10df-464b-8e26-62c79e81f9be">

              {%
                include 'site/form/lecture' 
                with {
                  'sections': sections
                } only
              %}

              <p>
                <a class="more-lecture">
                  Добавить еще один доклад
                </a>
              </p>
            </div>

          {% endif %}

          <div class="text-right">
              <button type="submit" class="button button-orange-hollow">Сохранить</button>
          </div>
        </form>
      </div>
    </div>
  </td>
</tr>